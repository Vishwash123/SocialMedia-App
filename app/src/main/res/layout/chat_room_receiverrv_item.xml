<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/receiverMessageCardView"

        android:orientation="vertical"
        android:gravity="start"
        android:layout_height="match_parent"
        android:layout_width = "match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:background="@drawable/receiver_chat_bubble"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/receiverMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:maxWidth="350dp"

                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:text="message sent already wfweqfqwrfwfqcwqsdkbc sjcbajdcbjsdvchsdvchvcdhjsvajcvdch"
                android:textColor="#6200EE"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/receiverMessageSentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="10:00pm"
                android:textColor="#6200EE"
                android:textSize="10sp"

                app:layout_constraintEnd_toEndOf="@+id/receiverMessageText"
                app:layout_constraintTop_toBottomOf="@+id/receiverMessageText" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
