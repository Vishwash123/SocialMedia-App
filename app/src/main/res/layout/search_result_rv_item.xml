<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/searchResultPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_image_outline"
        android:padding="4dp"
        android:src="@drawable/ic_person_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SearchResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/searchResultPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SearchResultBio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:text="This is the user's bio oh yeah d wed e e f rw f ref r f rf r fr c rt "
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultPhoto"
        app:layout_constraintEnd_toStartOf="@+id/SearchResultAddCancel"
        app:layout_constraintStart_toEndOf="@+id/searchResultPhoto"
        app:layout_constraintTop_toBottomOf="@+id/SearchResultName" />

    <TextView
        android:id="@+id/SearchResultAddCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Add Friend"

        android:textColor="#6200EE"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>